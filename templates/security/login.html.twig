{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <br>
<form method="post" style="background-color: lightgrey; width: 500px; text-align: center; margin: auto; border-radius: 10px">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Veuillez-vous identifier </h1>
    <label for="inputEmail">Adresse Mail</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus style="width: 300px; margin: auto">
    <br>
    <label for="inputPassword">Mot de Passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required style="width: 300px; margin: auto">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <br>

    <button class="btn btn-outline-light my-2 my-sm-0 bg-primary" style=" color: white" type="submit">
        Se Connecter
    </button>
</form>
{% endblock %}
