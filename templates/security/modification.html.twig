{% extends 'base.html.twig' %}

{% block title %} Modification {% endblock %}

{% block body %}

    <h2 style="text-align: center">Vous modifiez le profil de {{ app.user.firstname }} {{ app.user.lastname }}</h2>
    <br>
    <div class="row" style="background-color: lightgrey; width: 500px; text-align: center; margin: auto; border-radius: 10px">
        <div class="col-2">

        </div>


        {{ form_start(form , {'attr': {class:'col-8'}})  }}

        <h1 class="h3 mb-3 font-weight-normal">Modifiez vos infos !! </h1>


        <label for="">Pr√©nom</label> <br>
        {{ form_widget(form.firstname, {'attr': {class:'form-control'}}) }}

        <br>

        <label for="">Nom</label> <br>
        {{ form_widget(form.lastname, {'attr': {class:'form-control'}}) }}
        <br>

        <label for="">Pseudo</label> <br>
        {{ form_widget(form.pseudo, {'attr': {class:'form-control'}}) }}
        <br>


        <label for="">Date de Naissance</label><br>
        {{ form_widget(form.birthday, {'attr': {class:'form-control'}}) }}

        <br>
        <label for="">Mot de Passe</label><br>
        {{ form_widget(form.password, {'attr': {class:'form-control'}}) }}


        <br>



        <button type="submit" class="btn btn-outline-light my-2 my-sm-0 bg-primary">Modifier</button>



        {{ form_end(form) }}
    </div>
{% endblock body %}



